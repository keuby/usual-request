{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
